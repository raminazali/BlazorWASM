@layout NullLayout
@page "/signup"


<section class="bg-home d-flex align-items-center" style="background: url('img/hero/auth.jpg') center;">
    <div class="bg-overlay bg-linear-gradient-2"></div>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-lg-4 col-md-6 col-12">
                <div class="p-4 bg-white rounded shadow-md mx-auto w-100" style="max-width: 400px;">
                    <form>
                        <a href="index.html"><img src="img/logo-dark.png" class="mb-4 d-block mx-auto" alt=""></a>
                        <h6 class="mb-3 text-uppercase fw-semibold">ثبت نام کاربر</h6>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">نام</label>
                            <input name="name" id="name" type="text" class="form-control" placeholder="نام">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">ایمیل</label>
                            <input name="email" id="email" type="email" class="form-control" placeholder="example@website.com">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold" for="loginpass">رمز عبور</label>
                            <input type="password" class="form-control" id="loginpass" placeholder="رمز عبور">
                        </div>

                        @* <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-label form-check-label text-muted" for="flexCheckDefault">I Accept <a href="#" class="text-primary">Terms And Condition</a></label>
                        </div> *@

                        <button class="btn btn-primary w-100" type="submit">ثبت نام</button>

                        <div class="col-12 text-center mt-3">
                            <span><span class="text-muted small me-2">قبلا حساب باز کرده اید ? </span> <a href="/login" class="text-dark fw-semibold small">ورود</a></span>
                        </div><!--end col-->
                    </form>
                </div>
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
</section><!--end section-->
